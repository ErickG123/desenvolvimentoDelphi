unit untPrincipal;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.Buttons;

type
  TfrmPrincipal = class(TForm)
    memResultado: TMemo;
    btnExibir: TButton;
    BitBtn1: TBitBtn;
    procedure btnExibirClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  frmPrincipal: TfrmPrincipal;

implementation

{$R *.dfm}

procedure TfrmPrincipal.btnExibirClick(Sender: TObject);
var meuVetor : Array [0..50] of Integer;
begin
  //Colocando valores nas posições do vetor
  meuVetor[0] := 1;
  meuVetor[1] := 5;
  meuVetor[2] := 8;
  meuVetor[3] := 9;

  //Mostrando os valores no TMemo
  memResultado.Lines.Clear;   //Limpando (apagando) as linhas
  memResultado.Lines.Add('Valores do meu vetor'); //Adicionando linha de cabeçalho
  //Adicionando cada valor do vetor em uma linha do TMemo
  memResultado.Lines.Add( IntToStr(meuVetor[0]) );
  memResultado.Lines.Add( IntToStr(meuVetor[1]) );
  memResultado.Lines.Add( IntToStr(meuVetor[2]) );
  memResultado.Lines.Add( IntToStr(meuVetor[3]) );
end;

end.

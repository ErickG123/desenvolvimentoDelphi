{ ----------------- Programação para o botão "Limpar" --------------- }
procedure TfrmPrincipal.btnLimparClick(Sender: TObject);
begin
  {Insira aqui a sua programação para o botão "Limpar"}

  //Limpando os conteúdos dos edits
  edtNotaTrabalho.Text := '';

unit untPrincipal;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.Buttons, Vcl.StdCtrls;

type
  TForm1 = class(TForm)
    btnCriarArray: TButton;
    BitBtn1: TBitBtn;
    Label1: TLabel;
    edtMenorNumero: TEdit;
    edtMaiorNumero: TEdit;
    Label2: TLabel;
    edtSoma: TEdit;
    edtMedia: TEdit;
    Label3: TLabel;
    procedure btnCriarArrayClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

procedure TForm1.btnCriarArrayClick(Sender: TObject);

var meuVetor : Array [0..9] of Integer;
    i,soma : integer;
    menorNum : integer;
    maiorNum : integer;
    media : double;

begin
  meuVetor[0] := 5;
  meuVetor[1] := 2;
  meuVetor[2] := 8;
  meuVetor[3] := 4;
  meuVetor[4] := 2;
  meuVetor[5] := 1;
  meuVetor[6] := 3;
  meuVetor[7] := 5;
  meuVetor[8] := 1;
  meuVetor[9] := 0;

  menorNum := meuVetor[0];
  maiorNum := meuVetor[0];
  soma := 0;

  for i := 0 to 9 do
  begin
    if(meuVetor[i] < menorNum) then
      menorNum := meuVetor[i];

    if (meuVetor[i] > maiorNum) then
      maiorNum := meuVetor[i];

    soma := soma + meuVetor[i];
   end;

  edtMenorNumero.Text := IntToStr(menorNum);
  edtmaiorNumero.Text := IntToStr(maiorNum);
  edtSoma.Text := IntToStr(soma);

end;

end.
